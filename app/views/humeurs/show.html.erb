<div class = "container container-fluid">
  <div class="row m-5">
    <h1 class="pb-2"><strong>Je peux...</strong></h1>
    <% action = @humeur.actions.map { |action| action }.sample %>
    <h1 class="mt-5"><%= action.content %></h1>
    <% if action.link && !action.photos.attached? %>
      <h3 class="mt-5">✔<%= action.link %></h3>
    <% elsif action.address %>
      <h4 class=""><%= action.address %></h4>
    <% elsif action.photos.attached? %>
      <div><h1 class="mt-3"><%= link_to cl_image_tag(action.photos[0].key, class: "action-photo"), action.link %></h1></div>
    <% end %>
    <div class="fixed-bottom">
      <h3 class="mb-5 me-5 d-flex align-items-end flex-column"><%= link_to "... j'ai changé d'humeur.", humeurs_path %></h3>
    </div>
  </div>
</div>
