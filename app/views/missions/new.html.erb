<div class="d-flex position-absolute top-50 start-50 translate-middle">
  <h6 class="justify-content-center">
    <%= simple_form_for [humeur, mission] do |f| %>
      <%= f.input :content%>
      <%= f.input :address%>
      <%= f.input :link%>
      <%= f.input :video%>
      <%= f.input :photos%>
      <div class="d-grid gap-2">
        <%= f.submit 'Nouvelle mission ?', class: "text-light btn btn-warning"%>
      </div>
    <% end %>
  </h6>
</div>
